@model BrewHounds.Models.Beer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = @Html.DisplayFor(model => model.Name);
    

     string currentUser = User.Identity.Name;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <hr />

        <div class="col-md-3">
            <img class="detail-img" src="@Url.Content(Model.Image)" height="300" />
        </div>

        <div class="col-md-7">
            <h2>Description:</h2>
            <p>@Html.DisplayFor(model => model.Description)</p>
        </div>
        <div class="col-md-2">
            <h4>$@Html.DisplayFor(model => model.Price)</h4>
            @{ if (currentUser != "")
             {
                <form action="~/ShoppingCarts/Create" method="post">
                    <input type="hidden" id="User" name="User" value="@(currentUser)" />
                    <input type="hidden" id="ItemID" name="ItemID" value="@Html.DisplayFor(model => model.Id)">
                    <label>Quantity:</label>
                    <select id="Quantity" name="Quantity" class="form-control">
                        <option value="1" selected="selected">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                    <br />
                    <label>Contains:</label>
                    <p>@Html.DisplayFor(model => model.Volume)</p>
                    <input type="submit" class="btn btn-danger" value="Add to Cart" />
                </form>
             }
             else
             {
                <p>Please login to purchase this product.</p>
             }
            }
        </div>

        <div class="clearfix visible-xs-block"></div>

        <hr />

        <div class="details">
            <h2>Product Details:</h2>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Volume)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Volume)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Content)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Origin)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Origin)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Brewery)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Brewery)
                </dd>

            </dl>
        </div>


    </div>
    <p>
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
