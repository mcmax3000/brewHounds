@model IEnumerable<BrewHounds.Models.Beer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Beers";
}


    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <h2 class="page-topper">
        Beer Warehouse
    </h2>
    <hr />
    <br /><br />
            @foreach (var item in Model) {
                <div class="col-md-3 beersDetail">

                    <h4><a href="/Beers/Details/@{@Html.DisplayFor(modelItem => item.Id)}">@Html.DisplayFor(modelItem => item.Name)</a></h4>
                    <hr />
                    <a href="/Beers/Details/@{@Html.DisplayFor(modelItem => item.Id)}"><img src="@Url.Content(item.Image)" /></a>

                    <h4><strong>$@Html.DisplayFor(modelItem => item.Price)</strong></h4>

                    <p>@Html.ActionLink("View", "Details", new { id = item.Id }, new {@class= "btn btn-danger"})</p>

                    <p class="itemDesc">@Html.DisplayFor(modelItem => item.Description)</p>

                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |

                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
               </div>
    }

<div class="clearfix visible-xs-block"></div>
    
    
